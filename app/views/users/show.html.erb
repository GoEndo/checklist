<% provide(:title, @user.name) %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
      </h1>
    </section>
  </aside>
</div>

<p>
  <strong>Email:</strong>
  <%= @user.email %>
  <br>

  <strong>Role:</strong>
  <%= @user.role %>
  <br>

  <strong>Created at:</strong>
  <%= format_time @user.created_at, "UTC" %>
  <br>

  <strong>Activated:</strong>
  <%= @user.activated? %>
  <br>

  <strong>Activated at:</strong>
  <%= format_time @user.activated_at, "UTC" %>
  <br>
</p>

<%= link_to 'Back', users_path %>