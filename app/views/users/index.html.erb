<h1>Users</h1>

<%= link_to 'New User', new_user_path %><br>

<p></p>

<table class="listing">
  <tr>
    <th>Name</th>
    <th>E-mail</th>
    <th>Role</th>
  </tr>
  <% @users.each do |user| %>
    <tr>
      <td><%= user.name %></td>
      <td><%= user.email %></td>
      <td></td>

      <td>
        <%= link_to 'Show', user_path(user) %> |
        <%= link_to 'Edit', edit_user_path(user) %> |
        <%= link_to 'Destroy', user_path(user),
                    method: :delete,
                    data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
</table>

<%= link_to 'Back', root_path %>